- artworks ||= []
- specific_user ||= false

%ul.thumbs
  - artworks.each do |a|
    %li
      .image-container
        = link_to image_tag(a.thumb_url, class: 'thumb'), a
      .caption
        %h3= link_to a.title, a
        - unless specific_user
          %p.byline
            by
            = link_to a.user, user_path(a.user)