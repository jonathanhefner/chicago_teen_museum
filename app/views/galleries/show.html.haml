%h1= @gallery.title

- if can?(:update, @gallery)
  = link_to 'Edit Gallery', edit_gallery_path(@gallery), class: 'action'

.description
  :markdown
    #{@gallery.description}

- if @gallery.artworks.any?
  %h2= link_to 'Recent Additions', artworks_path(gallery: @gallery)

  = render 'shared/thumbs', models: @gallery.artworks.limit(9)